@import "../index/index.wxss";

.car-list{
  background: #FFF;
  margin-bottom: 10rpx;
}
.car-list__bd{
  padding: 20rpx;
}
.car-list__title{
  font-size :30rpx;
  padding: 14rpx 0;
}

.car-list__desc{
  font-size: 28rpx;
  padding: 5rpx 0;
  color: #999;
}

.car-list__ft{
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  border-top: 1rpx solid rgba(0,0,0,0.08); 
}
.list-btn{
  text-align : center;
  width : 100%;
  height: 76rpx;
  line-height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-btn:not(:last-child) {
  border-right: 1rpx solid rgba(0,0,0,0.08); 
}

.list-btn image{
  height: 36rpx;
  width: 36rpx;
}
.list-btn text{
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 5rpx;
}