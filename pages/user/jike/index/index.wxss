/* pages/user/jike/page/jike/index.wxss */
.container{
  height: 100%;
  padding: 0;
}
swiper{
  height: 100%;
  background: #FFF;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.cover-box{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  position: relative;
}
.content-box{
  width: 100%;
  height: auto;
  background: #f7f7f7;
  position: relative;
}

.cover-box .jike-cover{
  height: 100%;
  width: 100%;
}
.cover-box .jike-arrow{
  height: 47rpx;
  width: 51rpx;
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  margin-left: -26rpx;
  text-align: center;
  z-index: 100;
  animation: guideTop  1.5s infinite;
}

@keyframes guideTop {
    0% {
        transform: translateY(42px);
        opacity: 0
    }

    60% {
        transform: translateY(12px);
        opacity: 1
    }

    100% {
        transform: translateY(0px);
        opacity: 0
    }
}

.jike-name{
  background: #FFF;
  display: flex;
  padding: 20rpx;
  font-weight: bold;
  border-bottom: 1rpx solid rgba(0,0,0,0.08);
}
.jike-name image{
  height: 60rpx;
  width: 60rpx;
}
.jike-name text{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  padding-left: 10rpx;
}

.jike-info{
  background: #FFF;
  font-size: 28rpx;
  position: relative;
  border-bottom: 1rpx solid rgba(0,0,0,0.08);
}
.jike-info-cell{
  color: #333;
  padding: 15rpx;
}
.jike-info-cell text{
  color: #666;
  min-width: 80rpx;
}
.jike-info-tips{
  position: absolute;
  top: 20%;
  right: 0;
  background: #F00;
  color: #FFF;
  padding: 6rpx 12rpx;
  border-radius: 50rpx 0 0 50rpx; 
  font-size: 24rpx;
  
}
.jike-nav{
  display: flex;
  background: #FFF;
  font-size: 28rpx;
  width: 100%;
}
.jike-nav-cell{
  display: flex; 
  justify-content: center;
  width: 100%;
  padding: 30rpx 0rpx;
}
.jike-nav-cell image{
  width: 32rpx;
  height: 32rpx; 
  padding:  0 5rpx;
}

.article-box{
  padding-bottom: 120rpx;
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
}
.wxParse-img{
  width: 100% !important;
}
.tool-bar{
  width: 100%;
  min-height: 60rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  background: #FFF;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(0,0,0,0.08);
}
.tool-bar text{
  font-size: 28rpx;
  color: #ff4e46;
}
.time-view{
  font-size: 28rpx;
  line-height: 60rpx;
  min-height: 60rpx;
  color: #333;
}
.btn{
  margin: 0;
  line-height:2.8;
  background:#ff4e46;
  color:#FFF;
  border-radius:6rpx;
  font-size:28rpx;
  padding: 0 40rpx;
}


.summary-wrap{
  background: #FFF;
  margin-top: 10rpx;
}
.summary-title{
  text-align: center;
  padding: 10rpx 0;
  font-size: 32rpx;
}
.summary{
  font-size: 32rpx;
  display: flex;
  padding: 10rpx 0;
}
.summary__hd{
  width: 12%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.summary__hd view{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #333;
  color: #FFF;
  border-radius: 50%;
}
.summary__bd{
  width: 88%;
}
.summary-desc{
  color: #666;
}