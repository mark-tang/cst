
.container{
  width: 100%;
  overflow: hidden;
}
.peccency-list{
  width: 100%;
  height: 200rpx;
  position: relative; 
  margin-top: 10rpx;
  background: #FFF;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  
}
.peccency-list .list-handle{
    width: 280rpx;
    height: 200rpx;
    line-height: 200rpx;
    position: absolute;
    top: 0;
    right: -280rpx;
    display: flex;
    font-size: 30rpx;
}
.list-handle-cell{
  width: 50%;
  text-align: center;
  color: #FFF;
}
.peccency-list .list-handle .edit{  
  background: #3f69f7;
}
.peccency-list .list-handle .remove{
  background: #ff5a16;
}
.pec-list-carNum{
  font-size: 34rpx;
  font-weight: bold;
  padding-bottom: 15rpx;
  margin-top:20rpx;
}
.pec-list-vice{
  font-size: 26rpx;
  color: #666;
  padding:10rpx 0 ;
}
.pec-list-vice text{
  color: #f91540;
}


