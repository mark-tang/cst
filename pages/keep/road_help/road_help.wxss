.toast{
  position: fixed;
  top: 75%;
  z-index: 1010;
  background: rgba(0, 0, 0, .8);
  padding: 32rpx 30rpx;
  border-radius: 10rpx;
  color: #FFF;
  font-size: 34rpx;
  left: 50%;
  transform: translate(-50%,-50%);
  display: block;
  text-align: center;
}
map{
  width: 100%;
  height: 300px;
}
.now-location{
  background: #FFF;
  line-height: 1.4rem;
  font-size: 28rpx;
  padding:30rpx;
  color: #666;
  position: relative;
  
}
.now-location image{
  width: 26rpx;
  height: 32rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -16rpx;
}
.now-location text{
  padding-left: 40rpx;
}
.fast-help{
  padding-bottom: 200rpx;
}
.fast-help-list{
  background: #FFF;
  line-height: 1.4rem;
  font-size: 30rpx;
  padding:30rpx;
  position: relative;
  border-bottom: 1px solid #f8f8f8;
}
.fast-help-list image{
  position: absolute;
  height: 36rpx;
  width: 36rpx;
  right:0rpx;
  top: 50%;
  padding: 20rpx 40rpx;
  padding-left: 100rpx;
  margin-top: -38rpx;
}
.fast-help-list image.special-call{
  padding-left:300rpx;
}
.fast-help-list image.arrow-down-more{
  position: initial;
  height: 9rpx;
  width: 16rpx;
  margin-top: 10rpx;
  top: 20%;
  padding: 0 10rpx;
  height: 25rpx;
}
.fixed-btn{
  bottom: 0;
  padding: 30rpx;
  background: #FFF;
  display: flex;
  border-top: 1px solid #efefef;
  width:100%;
  left:0;
}
.fixed-btn-big{
  width: 100%;
}