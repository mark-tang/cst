/**keep.wxss**/

.container{
  padding: 0
}
.car-top{
  position: relative;
  width: 100%;
  height: 180rpx;
  background: #FFF;
  margin-top: 20rpx;
  border-bottom:1rpx solid rgba(0, 0, 0, 0.04); 
}

.car-top > image{
  position: absolute;
  top: 50%;
  left: 30rpx;
  margin-top: -60rpx;
  height: 150rpx;
  width: 150rpx;
}
.add-car > image{
  box-shadow: 0rpx 7rpx 15rpx rgba(74, 116, 249, .25);
  border-radius: 50%;
  margin-top: -60rpx;
  height: 120rpx;
  width: 120rpx;
}
.car-top .text-mian{
  position: absolute;
  left:200rpx;
  right:80rpx;
  top: 50rpx;
  font-weight: bold;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.car-top .text-sub{
  position: absolute;
  left:200rpx;
  bottom: 50rpx;
  font-size: 28rpx;
  color: #9b9b9b;
}

.car-top .text-middle {
  position: absolute;
  left:160rpx;
  top: 50%;
  font-weight: bold;
  font-size: 36rpx;
  margin-top: -18rpx;
}
.query{
  display: flex;
  width: 100%;
  background: #FFF;
  height: 180rpx;

}
.query>view{
  flex: 1;
  text-align: center;
  padding: 50rpx 0 40rpx 0;
  position: relative;
}
.query .tips{
  position: absolute;
  width: 84rpx;
  height: 39rpx;
  top: 0rpx;
  left: 50%;
  margin-left: -42rpx;
}
.query .tips image{
  width: 100%;
  height: 100%;
}
.query view>image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: bottom;
}
.next-text{
  width: 100%;
  height: 45rpx;
  display: block;
  font-weight: bold;
  color: #333;
}
.query .word{
  text-align: center;
  display: block;
  font-size: 26rpx;
  color: #9b9b9b;
  margin-top: 10rpx;
}
.panel{
  width: 96%;
  margin: 10rpx auto 0;
}
.menu{
  width: 30.333%;
  height: 200rpx;
  margin: 10rpx 1.5%;
  background: #FFF;
  float: left;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-radius: 6rpx;
  box-shadow: 0 4rpx 8rpx rgba(132, 132, 132, .1); 
  padding:40rpx 20rpx;
  box-sizing: border-box;
}
.menu:active {
  background-color: #dcdcdc;
}
.menu image{
  width:62rpx;
  height:62rpx;
}
.menu text{
  display: block;
  margin-top: 20rpx;
}

/*4S店信息*/
.store-info{
  padding: 32rpx 0rpx 32rpx 28rpx;
  background: #FFF;
  display: flex;
  /* background: linear-gradient(180deg, #3f6af7, #004de9); */
  background: #228ade;
}
.store-logo{
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.store-logo image{
  width: 96rpx;
  height: 96rpx;
  min-width: 96rpx;
  flex: 1;
  width: 20%;
}
.store-name{
  width : 55%;
  flex: 1;
  text-align: left;
  border-right: 1rpx solid rgba(255, 255, 255, 0.2)
}
.store-text__main{
  font-size: 34rpx;
  height: 50rpx;
  line-height: 50rpx;
  color:#FFF;
  display: flex;
  align-items: center;
}
.store-text__main image{
  height: 50rpx;
  width: 50rpx;
}
.store-text__main text{
  padding-left: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.store-text__sub{
  font-size: 24rpx;
  line-height: 40rpx;
  color:#FFF;
  display: flex;
  padding-left: 14rpx;
  padding-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.store-text__sub image{
  padding-top: 4rpx;
  height: 32rpx;
  width: 32rpx;
  min-width: 32rpx;
}
.store-text__sub text{
  padding-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.store-sa {
  width: 30%;
  color: #FFF;
  font-size: 28rpx;
  text-align: center;
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
}
.store-sa view{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
.store-sa image{
  height: 40rpx;
  width: 40rpx;
}
